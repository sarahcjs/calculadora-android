<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.calculadora.MainActivity">

    <Button
        android:id="@+id/btnExp"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginRight="21dp"
        android:text="x^2"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMult"
        app:layout_constraintRight_toLeftOf="@+id/btnMult" />

    <Button
        android:id="@+id/btnSqrt"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginRight="21dp"
        android:text="√x"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@+id/btnDiv"
        tools:layout_editor_absoluteY="218dp" />

    <Button
        android:id="@+id/btnSignal"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:text="±"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSub"
        app:layout_constraintRight_toLeftOf="@+id/btnSub"
        android:layout_marginRight="21dp" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:text="."
        app:layout_constraintRight_toLeftOf="@+id/btnSum"
        android:layout_marginRight="21dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSum" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="142dp"
        android:layout_height="56dp"
        android:layout_marginRight="16dp"
        android:text="="
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSum"
        tools:layout_editor_absoluteX="226dp" />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:text="+"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSub" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginRight="16dp"
        android:text="-"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginRight="16dp"
        android:text="/"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMult" />

    <TextView
        android:id="@+id/tvCalc"
        android:layout_width="357dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="O cálculo aparece aqui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="89dp"
        android:text="*"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCalc" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:text="DEL"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCalc"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:text="AC"
        app:layout_constraintRight_toLeftOf="@+id/btnDel"
        android:layout_marginRight="17dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCalc" />

</android.support.constraint.ConstraintLayout>
